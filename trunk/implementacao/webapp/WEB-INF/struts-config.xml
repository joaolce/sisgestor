<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="manterDepartamentoForm" type="br.com.ucb.sisgestor.apresentacao.forms.ManterDepartamentoActionForm" />
		<form-bean name="manterUsuarioForm" type="br.com.ucb.sisgestor.apresentacao.forms.ManterUsuarioActionForm" />
	</form-beans>

	<global-exceptions>
		<exception key="label.exceptionDefault" 
			   type="java.lang.Exception" 
			   handler="org.apache.struts.action.ExceptionHandler" 
			   path="erro" />
	</global-exceptions>

	<global-forwards>
		<forward name="erro" path="erro" />
		<forward name="acessoNegado" path="/dologin?erro=403" />
		<forward name="erroValidacao" path="erroValidacao"/>
	</global-forwards>

	<action-mappings>
		<!-- Principal -->
		<action path="/principal" 
			type="br.com.ucb.sisgestor.apresentacao.actions.PrincipalAction"
			validate="false" 
			scope="request"
			parameter="method">
			<forward name="entrada" path="definicaoPrincipal" />
		</action>
		
		<!-- Manter Departamento -->
		<action path="/manterDepartamento" 
			type="br.com.ucb.sisgestor.apresentacao.actions.ManterDepartamentoAction"
			name="manterDepartamentoForm"
			validate="false" 
			scope="request"
			parameter="method">
			<forward name="entrada" path="definicaoManterDepartamento" />
			<forward name="popupNovoDepartamento" path="popupNovoDepartamento" />
		</action>
		
		<!-- Manter UsuÃ¡rio -->
		<action path="/manterUsuario" 
			type="br.com.ucb.sisgestor.apresentacao.actions.ManterUsuarioAction"
			name="manterUsuarioForm"
			validate="false" 
			scope="request"
			parameter="method">
			<forward name="entrada" path="definicaoManterUsuario" />
			<forward name="popupNovoUsuario" path="popupNovoUsuario" />
			<forward name="popupEditarPermissoes" path="popupEditarPermissoes" />
			<forward name="popupEditarSenha" path="popupEditarSenha" />
		</action>
	</action-mappings>


	<controller maxFileSize="10M" processorClass="org.apache.struts.tiles.TilesRequestProcessor" />
	<message-resources parameter="sisgestor" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property value="/WEB-INF/tiles-defs.xml" property="definitions-config" />
		<set-property value="0" property="definitions-debug" />
	</plug-in>

	<plug-in className="net.sf.navigator.menu.MenuPlugIn">
		<set-property value="/WEB-INF/menu-config.xml" property="menuConfig" />
	</plug-in>
</struts-config>
