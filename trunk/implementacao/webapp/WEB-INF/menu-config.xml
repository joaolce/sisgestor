<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE menu-config [
<!ELEMENT MenuConfig (Displayers, Menus+)>
<!ELEMENT Displayers (Displayer+)>
<!ELEMENT Menus (Menu+)>
<!ELEMENT Displayer EMPTY>
<!ATTLIST Displayer
    name CDATA #REQUIRED
    type CDATA #REQUIRED
>
<!ELEMENT Menu (Item*)>
<!ATTLIST Menu
    name CDATA #REQUIRED
    title CDATA #REQUIRED
    description CDATA #IMPLIED
    page CDATA #REQUIRED
    width CDATA #IMPLIED
    image CDATA #IMPLIED
>
<!ELEMENT Item EMPTY>
<!ATTLIST Item
    name CDATA #REQUIRED
    title CDATA #REQUIRED
    description CDATA #IMPLIED
    page CDATA #REQUIRED
    width CDATA #IMPLIED
    image CDATA #IMPLIED
>
]>
<MenuConfig>
	<!-- Menu modelo Coolmenu usado como padrÃ£o -->
	<Displayers>
